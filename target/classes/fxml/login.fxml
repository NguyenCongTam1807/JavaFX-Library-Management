<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox id="VBox" fx:id="vBox" alignment="CENTER" prefHeight="386.0" prefWidth="400.0" styleClass="custom-pane" stylesheets="@../css/hacker_theme.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.LoginLoader">
    <children>
      <Label prefHeight="50.0" prefWidth="400.0" scaleShape="false" styleClass="top" text="FUTURE LIBRARY">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <effect>
            <Glow level="0.9" />
         </effect>
      </Label>
        <FontIcon iconColor="#12fb08" iconLiteral="bxs-book-bookmark" iconSize="40">
             <effect>
                <Glow level="0.67" />
             </effect>
        </FontIcon>
        <JFXTextField fx:id="txtId" focusColor="#12fb08" labelFloat="true" prefHeight="33.0" prefWidth="318.0" promptText="Username" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="70.0" right="70.0" top="40.0" />
            </VBox.margin>
         <effect>
            <Glow level="0.9" />
         </effect>
        </JFXTextField>
        <JFXPasswordField fx:id="txtPw" focusColor="#12fb08" labelFloat="true" onAction="#loginHandler" prefHeight="34.0" prefWidth="200.0" promptText="Password" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="70.0" right="70.0" top="20.0" />
            </VBox.margin>
         <effect>
            <Glow level="0.9" />
         </effect>
        </JFXPasswordField>
        <Label fx:id="lblError" prefHeight="30.0" prefWidth="400.0" scaleShape="false" styleClass="error-small" text="">
            <VBox.margin>
                <Insets left="70.0" right="70.0" />
            </VBox.margin>
         <effect>
            <Glow level="0.9" />
         </effect>
        </Label>
        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="398.0" spacing="40.0">
            <JFXButton fx:id="btnLogin" onAction="#loginHandler" prefHeight="40.0" prefWidth="90.0" styleClass="login-button" text="Login">
            <effect>
               <Glow level="0.9" />
            </effect></JFXButton>
            <JFXButton fx:id="btnSignUp" onAction="#signUpHandler" prefHeight="40.0" prefWidth="90.0" styleClass="login-button" text="Sign up">
            <effect>
               <Glow level="0.9" />
            </effect></JFXButton>
         <effect>
            <Glow level="0.9" />
         </effect>
        </HBox>
      <Label fx:id="lblCredit" alignment="CENTER" prefHeight="35.0" prefWidth="400.0" text="Công Tâm - Gia Huy - Đăng Khoa - Thành Đạt&#10;DH19CS02 - Open University" textAlignment="CENTER">
         <effect>
            <Glow level="0.9" />
         </effect>
         <VBox.margin>
            <Insets right="10.0" />
         </VBox.margin>
      </Label>
    </children>
   <effect>
      <Glow level="0.0" />
   </effect>
</VBox>
