<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXCheckBox?>
<VBox xmlns="https://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/hacker_theme.css"
      fx:controller="ui.signup.SignUpController" prefHeight="153.0" prefWidth="404.0" spacing="10.0" >
    <children>
        <JFXTextField fx:id="name" labelFloat="true" promptText="Name">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="id" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Member ID">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXPasswordField fx:id="password" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Enter Password">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXPasswordField>
        <JFXPasswordField fx:id="repassword" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Re-Enter Password">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXPasswordField>
        <JFXDatePicker fx:id="birthday" layoutX="20" layoutY="  120.0" prefWidth="300" promptText="Enter your birthday">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXDatePicker>
        <JFXTextField fx:id="student_id" layoutX="20" layoutY="30.0" promptText="Enter student id">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="mobile" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Mobile">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="email" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Email">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXCheckBox id="check_terms" >
                I agree to the terms of service
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXCheckBox>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
            <children>
                <JFXButton fx:id="saveButton"  prefHeight="66.0" prefWidth="100.0" text="Register" /><!--onAction="#addMember"-->
                <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0"  prefHeight="66.0" prefWidth="100.0" text="Cancel" /><!--onAction="#cancel"-->
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
