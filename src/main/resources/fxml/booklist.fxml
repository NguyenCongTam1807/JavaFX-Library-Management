<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" stylesheets="@../css/hacker_theme.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.booklist.BookListController"
        id="AnchorPane" fx:id="contentPane" prefHeight="525.0" prefWidth="798.0">
    <children>
        <TableView fx:id="tableView" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="853.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="idCol" maxWidth="2500.0" prefWidth="75.0" text="Book ID" />
                <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
                <TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
                <TableColumn fx:id="availabilityCol" maxWidth="2800.0" prefWidth="75.0" text="Availability" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
                        <MenuItem mnemonicParsing="false" onAction="#handleBookEditOption" text="Edit" />
                        <MenuItem mnemonicParsing="false" onAction="#handleBookDeleteOption" text="Delete" />
                    </items>
                    <styleClass>
                        <String fx:value="table-context" />
                        <String fx:value="colored-context-menu" />
                    </styleClass>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <MenuBar layoutX="10.0" layoutY="10.0" prefHeight="32.0" prefWidth="722.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#exportAsPDF" text="Export as PDF" />
                        <MenuItem mnemonicParsing="false" onAction="#closeStage" text="Close" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</AnchorPane>
