<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="container" focusTraversable="true" prefHeight="153.0" prefWidth="450.0" spacing="10.0" stylesheets="@../css/hacker_theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ChangePasswordController">
    <children>
        <JFXPasswordField fx:id="txtPw" focusColor="#12fb08" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Enter your password" styleClass="label-form" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </JFXPasswordField>
        <Label fx:id="lblErrorPw" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="354.0" scaleShape="false" styleClass="error-small" textFill="WHITE">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="-5.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </Label>
        <JFXPasswordField fx:id="txtNewPw" focusColor="#12fb08" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Enter new password" styleClass="label-form" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </JFXPasswordField>
        <Label fx:id="lblErrorNewPw" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="354.0" scaleShape="false" styleClass="error-small" textFill="WHITE">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="-5.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </Label>
        <JFXPasswordField fx:id="txtReNewPw" focusColor="#12fb08" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Re-Enter new password" styleClass="label-form" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </JFXPasswordField>
        <Label fx:id="lblErrorRePw" prefHeight="10.0" prefWidth="400.0" scaleShape="false" styleClass="error-small" text="&#10;">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="-2.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </Label>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
            <children>
                <JFXButton fx:id="btnSave" prefHeight="66.0" prefWidth="100.0" styleClass="bordered" text="Save">
                    <effect>
                        <Glow level="0.9" />
                    </effect>
                </JFXButton><!--onAction="#addMember"-->
                <JFXButton fx:id="btnCancel" layoutX="10.0" layoutY="10.0" prefHeight="66.0" prefWidth="100.0" styleClass="bordered" text="Cancel">
                    <effect>
                        <Glow level="0.9" />
                    </effect>
                </JFXButton>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="40.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
