<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" spacing="10.0" stylesheets="@../css/hacker_theme.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.addbook.AddBookController">
    <children>
        <JFXTextField fx:id="title" focusColor="#12fb08" labelFloat="true" promptText="Book Title" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="id" focusColor="#12fb08" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Book ID" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="author" focusColor="#12fb08" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="Book Author" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="publisher" focusColor="#12fb08" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Publisher" unFocusColor="#065103">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </JFXTextField>
      <JFXTextField fx:id="publishedYear" focusColor="#12fb08" labelFloat="true" layoutX="10.0" layoutY="62.0" promptText="Published Year" unFocusColor="#065103">
        <VBox.margin>
            <Insets left="10.0" right="250.0" top="20.0" />
        </VBox.margin>
      </JFXTextField>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
            <children>
                <JFXButton fx:id="btnAddBook" prefHeight="66.0" prefWidth="100.0" text="Save" /><!--onAction="#addBook"-->
                <JFXButton fx:id="btnCancel" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0" text="Cancel" />
            </children>
            <VBox.margin>
                <Insets top="25.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
