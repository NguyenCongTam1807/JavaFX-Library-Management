<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox fx:id="root" prefHeight="450.0" prefWidth="450" stylesheets="@../css/hacker_theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.AddIssueController">
    <children>
        <JFXTextField fx:id="txtIdBook" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="User ID">
            <effect>
                <Glow level="0.9" />
            </effect>
        </JFXTextField>
        <Label fx:id="lblErrorName" prefHeight="10.0" prefWidth="400.0" scaleShape="false" styleClass="errorSmall" text="Kiểm tra user có tồn tại và được phép mượn">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
        </Label>
        <JFXButton prefWidth="110.0" styleClass="important" text="Check user">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <effect>
            <Glow level="0.89" />
         </effect></JFXButton>
        <Label prefHeight="10.0" prefWidth="400.0" styleClass="prompt" text="Issue date">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
            <effect>
                <Glow level="0.9" />
            </effect>
         <font>
            <Font name="Consolas" size="13.5" />
         </font>
        </Label>
        <JFXTextField fx:id="txtIssueDate" editable="false" prefWidth="200.0">
            <effect>
                <Glow level="0.9" />
            </effect>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </JFXTextField>
        <JFXDatePicker fx:id="txtReturnDueDate" defaultColor="#12fb08" editable="false" layoutX="20" layoutY="  120.0" maxHeight="1.7976931348623157E308" prefHeight="0.0" prefWidth="370.0" promptText="Return due date">
            <effect>
                <Glow level="0.9" />
            </effect>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
        </JFXDatePicker>
        <Label prefHeight="10.0" prefWidth="400.0" scaleShape="false" styleClass="errorSmall" text="Kiểm tra hạn trả sách hợp lệ">
            <effect>
                <Glow level="0.9" />
            </effect>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
        </Label>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0">
            <JFXButton fx:id="btnAdd">
                <graphic>
                    <FontIcon iconLiteral="anto-plus-circle" iconSize="30" />
                </graphic>
            <padding>
               <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
            </padding>
            <effect>
               <Glow level="0.9" />
            </effect>
            </JFXButton>
            <JFXButton fx:id="btnDelete" >
                <graphic>
                    <FontIcon iconLiteral="anto-minus-circle" iconSize="30" />
                </graphic>
            <padding>
               <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
            </padding>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
            <effect>
               <Glow level="0.9" />
            </effect>
            </JFXButton>
            <Label prefHeight="0.0" prefWidth="114.0" styleClass="info" text="Book quantity">
                <effect>
                    <Glow level="0.9" />
                </effect>
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Label>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
        </HBox>
        <VBox fx:id="vboxBookList" prefHeight="0.0" prefWidth="370.0">
            <JFXTextField fx:id="txtBook1" labelFloat="true" minHeight="-Infinity" prefHeight="5.0" prefWidth="200.0" promptText="Book ID No.1" visible="false">
                <VBox.margin>
                    <Insets top="0.0" />
                </VBox.margin>
            </JFXTextField>
        </VBox>
        <JFXButton alignment="CENTER" defaultButton="true" minHeight="-Infinity" prefHeight="30.0" prefWidth="450.0" text="Done">
         <VBox.margin>
            <Insets bottom="10.0" left="120.0" right="120.0" top="30.0" />
         </VBox.margin>
         <effect>
            <Glow level="0.9" />
         </effect></JFXButton>
    </children>
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="40.0" />
    </padding>
</VBox>
